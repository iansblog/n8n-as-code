{
    "name": "@n8n-as-code/vscode-extension",
    "displayName": "n8n as code",
    "description": "Edit your n8n workflows directly in VS Code with AI assistance.",
    "version": "0.0.1",
    "publisher": "etienne-lescot",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/EtienneLescot/n8n-as-code"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "n8n-explorer",
                    "title": "n8n",
                    "icon": "$(server-process)"
                }
            ]
        },
        "views": {
            "n8n-explorer": [
                {
                    "id": "n8n-explorer.workflows",
                    "name": "Workflows"
                }
            ]
        },
        "commands": [
            {
                "command": "n8n.pull",
                "title": "n8n: Pull Workflows"
            },
            {
                "command": "n8n.push",
                "title": "n8n: Push Workflows (Sync Up)"
            },
            {
                "command": "n8n.openBoard",
                "title": "Open Board (Webview)",
                "icon": "$(browser)"
            },
            {
                "command": "n8n.openJson",
                "title": "Open JSON",
                "icon": "$(json)"
            },
            {
                "command": "n8n.openSplit",
                "title": "Open Split View",
                "icon": "$(split-horizontal)"
            },
            {
                "command": "n8n.pushWorkflow",
                "title": "Push (Sync Up)",
                "icon": "$(cloud-upload)"
            },
            {
                "command": "n8n.pullWorkflow",
                "title": "Pull (Sync Down)",
                "icon": "$(cloud-download)"
            },
            {
                "command": "n8n.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "n8n.initializeAI",
                "title": "Initialize AI Context",
                "icon": "$(sparkle)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "n8n.initializeAI",
                    "group": "navigation",
                    "when": "view == n8n-explorer.workflows"
                },
                {
                    "command": "n8n.push",
                    "group": "navigation"
                },
                {
                    "command": "n8n.pull",
                    "group": "navigation"
                },
                {
                    "command": "n8n.refresh",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "n8n.openBoard",
                    "group": "inline"
                },
                {
                    "command": "n8n.openJson",
                    "group": "inline"
                },
                {
                    "command": "n8n.openBoard",
                    "group": "1_open@1"
                },
                {
                    "command": "n8n.openJson",
                    "group": "1_open@2"
                },
                {
                    "command": "n8n.openSplit",
                    "group": "1_open@3"
                },
                {
                    "command": "n8n.pushWorkflow",
                    "group": "2_sync@1"
                },
                {
                    "command": "n8n.pullWorkflow",
                    "group": "2_sync@2"
                }
            ]
        },
        "configuration": {
            "title": "n8n as Code",
            "properties": {
                "n8n.host": {
                    "type": "string",
                    "description": "Base URL of n8n instance"
                },
                "n8n.apiKey": {
                    "type": "string",
                    "description": "n8n API Key"
                },
                "n8n.syncFolder": {
                    "type": "string",
                    "default": "workflows",
                    "description": "Local folder to sync workflows"
                }
            }
        }
    },
    "categories": [
        "Other"
    ],
    "dependencies": {
        "@n8n-as-code/core": "^1.0.0",
        "@types/http-proxy": "^1.17.17",
        "http-proxy": "^1.18.1"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.3"
    },
    "scripts": {
        "build": "tsc -b",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    }
}
